{{> navigation }}

<h1 id="statistics-title">Statistics ({{ label }})</h1>

<canvas id="chart"></canvas>

{{{ openingScriptTag }}}
let context = document.getElementById("chart");

let dataset = {{{ data.stringify }}};

let chart = new Chart(context, {
type: "{{ chart }}",
data: {
labels: Object.keys(dataset),
datasets: [{
label: "{{ label }}",
data: Object.values(dataset),
backgroundColor: {{{ backgroundColor.stringify }}},
borderColor: {{{ borderColor.stringify }}},
borderWidth: 1
}]
},
options: {
title: {
display: true,
text: "{{{ chartTitle }}}"
},
maintainAspectRatio: false,
responsive: true,
scales: {
yAxes: [{
ticks: {
beginAtZero: true
}
}]
}
}
});
{{{ closingScriptTag }}}