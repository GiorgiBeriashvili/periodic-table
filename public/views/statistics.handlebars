<h1>Statistics:</h1>

<canvas id="chart" width="400" height="400"></canvas>

<script>
    let context = document.getElementById("chart");

    let months = {
        "January": 65,
        "February": 59,
        "March": 80,
        "April": 81,
        "May": 56,
        "June": 55
    }

    let chart = new Chart(context, {
        type: "pie",
        data: {
            labels: Object.keys(months),
            datasets: [{
                label: "# of Votes",
                data: Object.values(months),
                backgroundColor: [
                    "rgba(255, 99, 132, 0.2)",
                    "rgba(54, 162, 235, 0.2)",
                    "rgba(255, 206, 86, 0.2)",
                    "rgba(75, 192, 192, 0.2)",
                    "rgba(153, 102, 255, 0.2)",
                    "rgba(255, 159, 64, 0.2)"
                ],
                borderColor: [
                    "rgba(255, 99, 132, 1)",
                    "rgba(54, 162, 235, 1)",
                    "rgba(255, 206, 86, 1)",
                    "rgba(75, 192, 192, 1)",
                    "rgba(153, 102, 255, 1)",
                    "rgba(255, 159, 64, 1)"
                ],
                borderWidth: 1
            }]
        },
        options: {
            maintainAspectRatio: false,
            responsive: false,
            scales: {
                yAxes: [{
                    ticks: {
                        beginAtZero: true
                    }
                }]
            }
        }
    });
</script>